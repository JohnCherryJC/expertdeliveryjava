<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="8" xmlns:fx="http://javafx.com/fxml" fx:controller="com.expert.orders.controllers.OrdersController">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="8">
        <TextField fx:id="searchField" promptText="Поиск по клиенту или адресу"/>
        <ComboBox fx:id="statusFilter" prefWidth="150"/>
        <Button text="Новый" onAction="#onNew"/>
        <Button text="Редактировать" onAction="#onEdit"/>
        <Button text="Удалить" onAction="#onDelete"/>
        <Button text="Сохранить" onAction="#onSaveToFile"/>
        <Button text="Загрузить" onAction="#onLoadFromFile"/>
    </HBox>

    <TableView fx:id="ordersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="180"/>
            <TableColumn fx:id="colProduct" text="Товар" prefWidth="240"/>
            <TableColumn fx:id="colCustomer" text="Клиент" prefWidth="200"/>
            <TableColumn fx:id="colPhone" text="Телефон" prefWidth="150"/>
            <TableColumn fx:id="colDate" text="Дата" prefWidth="120"/>
            <TableColumn fx:id="colPrice" text="Цена" prefWidth="100"/>
            <TableColumn fx:id="colPaid" text="Статус оплаты" prefWidth="120"/>
            <TableColumn fx:id="colStatus" text="Статус" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Всего заказов:"/>
        <Label fx:id="totalLabel"/>
    </HBox>

</VBox>
