<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.expert.orders.controllers.OrderFormController" hgap="8" vgap="8">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Клиент:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="customerName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Телефон:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="customerPhone" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Адрес:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="address" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Товар:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="productBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Статус:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <ComboBox fx:id="statusBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Оплачен:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <CheckBox fx:id="paidBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <HBox spacing="8" GridPane.rowIndex="6" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
        <Button text="Сохранить" onAction="#onSave"/>
        <Button text="Отмена" onAction="#onCancel"/>
    </HBox>
</GridPane>
